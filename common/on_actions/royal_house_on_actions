on_actions = {

  on_monthly = {

    effect = {

      every_character = {
        limit = {
          has_trait = Auersperg
        }
        every_character = {
          limit = {
            has_trait = Auersperg
          }
          any_country = {
            limit = {
              has_character = PREV
            }
            any_country = {
              limit = {
                has_character = PREV.PREV.PREV
              }
              add_opinion_modifier = {
                target = PREV.PREV
                modifier = same_house
              }
            }
          }
        }
      }

      every_character = {
        limit = {
          has_trait = Saxe-Coburg-Gotha
        }
        every_character = {
          limit = {
            has_trait = Saxe-Coburg-Gotha
          }
          any_country = {
            limit = {
              has_character = PREV
            }
            any_country = {
              limit = {
                has_character = PREV.PREV.PREV
              }
              add_opinion_modifier = {
                target = PREV.PREV
                modifier = same_house
              }
            }
          }
        }
      }

      every_character = {
        limit = {
          has_trait = Habsburg-Este
        }
        every_character = {
          limit = {
            has_trait = Habsburg-Este
          }
          any_country = {
            limit = {
              has_character = PREV
            }
            any_country = {
              limit = {
                has_character = PREV.PREV.PREV
              }
              add_opinion_modifier = {
                target = PREV.PREV
                modifier = same_house
              }
            }
          }
        }
      }

      every_character = {
        limit = {
          has_trait = Este
        }
        every_character = {
          limit = {
            has_trait = Este
          }
          any_country = {
            limit = {
              has_character = PREV
            }
            any_country = {
              limit = {
                has_character = PREV.PREV.PREV
              }
              add_opinion_modifier = {
                target = PREV.PREV
                modifier = same_house
              }
            }
          }
        }
      }
      
    }
  
  }
  
}
